pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://gitlab.com/dev878/cicd-test.git'
                sh 'docker build -t test-image .'

            }

        }
        stage('Push to docket hub') {
            environment {
                DOCKER_CREDENTIALS = credentials('dockerhub_id')
            }
            steps {
                script {
                    // Login to Docker using credentials
                    sh "docker login -u ${DOCKER_CREDENTIALS_USR} -p ${DOCKER_CREDENTIALS_PSW} test-images"

                    // Tag the image
                    sh 'docker tag test-image test-image:v${BUILD_NUMBER}'
                    
                    // Push the image to Harbor
                    sh 'docker push test-image:v${BUILD_NUMBER}'
                }
            }
        }
        stage('Trigger GitHub Push') {
            steps {
                build job: 'push_image_tag_git', wait: true, parameters: [string(name: 'Build_Number_Image', value: "${BUILD_NUMBER}")]
            }
        }

    }
}
